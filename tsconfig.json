{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@server/*": ["server/*"],
      "@bot/*": ["bot/*"],
      "@src/*": ["src/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": ["server/**/*.ts", "bot/**/*.ts", "src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
