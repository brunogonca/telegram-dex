{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@server/*": ["server/*"],
      "@bot/*": ["bot/*"],
      "@tests/*": ["tests/*"],
      "@frontend/*": ["frontend/src/*"]
    }
  },
  "include": [
    "server/**/*.ts",
    "bot/**/*.ts",
    "frontend/src/**/*.tsx",
    ".global.d.ts"
  ],
  "exclude": ["node_modules"]
}
